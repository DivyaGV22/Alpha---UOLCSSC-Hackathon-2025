    if "time" in msg:
        return f"The current time is {get_time()}."

    # 3. Asking for name
    if "your name" in msg:
        return "Iâ€™m a simple Python chatbot ðŸ¤–. You can call me PyBot."

    # 4. Small talk: how are you
    if "how are you" in msg:
        return random.choice([
            "Iâ€™m just code, but Iâ€™m doing great! ðŸ˜„ How about you?",
            "All good here in the terminal. How are you?",
        ])

    # 5. Goodbye / exit
    if any(word in msg for word in GOODBYES):
        return "Bye! Type Ctrl+C or close the window to fully exit. ðŸ‘‹"

    # 6. Fallback / default response
    return random.choice([
